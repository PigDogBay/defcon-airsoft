<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="@string/pref_key_pellet_diameter"
        android:title="@string/pref_title_pellet_diameter"
        android:entries="@array/pref_pellet_diameter_titles"
        android:entryValues="@array/pref_pellet_diameter_values"
        android:defaultValue="6"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <EditTextPreference
        android:key="@string/pref_key_pellet_mass"
        android:title="@string/pref_title_pellet_mass"
        android:defaultValue="@string/pref_default_pellet_mass"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>